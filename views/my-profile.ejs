<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Unicomi</title>

  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <!-- Custom styles for this template -->
  <link href="/css/my-profile.css" rel="stylesheet">



</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg topbar fixed-top ">
    <div class="container">
      <a class="navbar-brand topname">UNI-COMI</a>
      <button class="navbar-toggler topname" type="button" data-toggle="collapse" data-target="#navbarResponsive"
        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon topname"></span>
      </button>
    </div>
  </nav>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right " id="sidebar-wrapper">

      <div class="list-group list-group-flush">
        <a href="/unicomi" class="list-group-item list-group-item-action bg-light">プロフィールリスト</a>
        <a href="/filtering" class="list-group-item list-group-item-action bg-light">条件検索</a>
        <a href="/my-profile" class="list-group-item list-group-item-action bg-light">マイページ</a>
        <a href="/logout" class="list-group-item list-group-item-action bg-light">ログアウト</a>
      </div>
    </div>



    <!-- Page Content -->
    <div  id="page-content-wrapper">
      <!-- /#sidebar-wrapper -->
      <div class="container" id="menu-toggle" onclick="myFunction(this)">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </div>


      <div class="container-fluid">
        <div class="userprofileframe">
          
          <button class="myButton"> <a style="text-decoration:none;color: inherit; "  href="edit-profile">プロフィールを編集</a></button>
          <br>
          <img class="profilepic" src="https://fineboys-online.jp/thegear/content/theme/media/kiyoharakaya_1.jpg"
            alt="プロフィール画像">
          <div class="profilecontent">
            
            <h1><%= MyName %></h1>
            <p>エリア：<%= MyArea %></p>
            <p>大学名：<%= MyUniversity %></p>
            <p>学年：<%=MyGrade %></p>
            <p>自己紹介：<%= MyBio %></p>
          </div>
          
          




        </div>
      </div>

    

    </div>



    <!-- Page Content -->


    <!-- Footer -->
    <!-- <footer class="py-5">
    <div class="container">
      <p class="m-0 text-center text-black">Copyright &copy; Your Website 2020</p>
    </div>
  </footer> -->

    <script>

      function myFunction(x) {
        x.classList.toggle("change");
        $("#wrapper").toggleClass("toggled");
      }

      function openForm() {
        document.getElementById("myForm").style.display = "block";
      }

      function closeForm() {
        document.getElementById("myForm").style.display = "none";
      }


    </script>

    <!-- Bootstrap core JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    




</body>

</html>