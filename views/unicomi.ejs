<%- include('partials/header') %> 

<body>

  <!-- Navigation -->
  <%- include('partials/navbar') %> 

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/sidebar') %> 
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button> -->
      <div class="container" id="menu-toggle" onclick="myFunction(this)">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </div>
      <!-- Menu Toggle Script -->
      <script>
        function myFunction(x) {
            x.classList.toggle("change");
            $("#wrapper").toggleClass("toggled");
          }
        

      </script>

      <div class="button-list">
        <a href="unicomi<%= query %>"><button class="profileButton">リスト更新</button></a>
        <a href="filtering"><button class="profileButton">条件検索</button></a>
      </div>
      


      <div class="container-fluid">
        
    
                
        <div class="fontawesome row" >
          <% users.forEach(function(user) { %>
            <div class="card col-lg-3">
              <div class="card-header">
                  <!-- <img src="/files/<user.profileimg%>" alt="Profile Image" class="profile-img"> -->
                  <img src="/files/user_icon.png" alt="Profile Image" class="profile-img">
              </div>
              <div class="card-body">
                  <p class="username"><%= user.name %></p>
                  <p class="university"><%= user.university %></p>
                  <p class="grade"><%= user.grade %></p>
                  
              </div>
              <div class="card-footer">
                <a href="user-profile/<%= user._id %>"><button class="profileButton">プロフィールを見る</button></a>
              </div>
            </div>
          <% }); %> 
          
          
          

          

        </div>
            <!-- /.col-lg-9 -->
          <a href='https://pngtree.com/so/user-icons'>user icons png from pngtree.com</a>
    
      </div>
            <!-- /.row -->
          <!-- /.container -->
      
    </div>

  </div>
    


  <!-- Page Content -->
  

